{
  "name": "sms-queue-api",
  "author": "David Bowland",
  "description": "Queues SMS messages in SQS to be sent by sms-queue-service",
  "version": "1.20.0",
  "engines": {
    "node": "^14.0.0"
  },
  "scripts": {
    "build": "npm run clean && tsc && cp package*.json dist/ && cd dist/ && HUSKY=0 NODE_ENV=production npm ci",
    "clean": "rm -rf dist coverage && NODE_ENV=test npm ci",
    "deploy": "npm run build && ./scripts/deploy.sh",
    "lint": "prettier --write . && eslint --fix . --resolve-plugins-relative-to .",
    "prepare": "if [ \"$HUSKY\" != \"0\" ]; then husky install ; fi",
    "start": "npm run build && npm run quick-start",
    "quick-start": "tsc && HUSKY=0 sam build && SQS_MESSAGE_QUEUE_ID=sms SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/$AWS_ACCOUNT_ID/sms-queue-service-test-SimpleQueue-zO4CTBnv6cwy.fifo sam local start-api --region us-east-1",
    "test": "npm run lint && jest --colors"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --resolve-plugins-relative-to . --fix",
      "jest --colors --findRelatedTests --coverageThreshold '{}'"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidbowland/sms-queue-api.git"
  },
  "bugs": {
    "url": "https://github.com/davidbowland/sms-queue-api/issues"
  },
  "homepage": "https://github.com/davidbowland/sms-queue-api#readme",
  "dependencies": {
    "aws-sdk": "^2.1073.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@types/aws-lambda": "^8.10.88",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-jest": "^27.4.5",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}

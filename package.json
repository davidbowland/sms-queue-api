{
  "name": "sms-queue-api",
  "author": "David Bowland",
  "description": "Queues SMS messages in SQS to be sent by sms-queue-service",
  "version": "1.27.0",
  "engines": {
    "node": "^16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidbowland/sms-queue-api.git"
  },
  "bugs": {
    "url": "https://github.com/davidbowland/sms-queue-api/issues"
  },
  "homepage": "https://github.com/davidbowland/sms-queue-api#readme",
  "scripts": {
    "build": "npm run clean && tsc && cp package*.json dist/ && cd dist/ && HUSKY=0 NODE_ENV=production npm ci",
    "clean": "rm -rf dist coverage && NODE_ENV=test npm ci",
    "deploy": "npm run build && ./scripts/deploy.sh",
    "lint": "prettier --write . && eslint --fix . --resolve-plugins-relative-to .",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install ; fi",
    "start": "npm run build && npm run quick-start",
    "quick-start": "tsc && ./scripts/runLocal.sh",
    "test": "jest --colors",
    "typecheck": "tsc --noEmit",
    "update": "ncu -u --doctor && npm audit fix --audit-level=none && npm run test && npm dedupe"
  },
  "dependencies": {
    "aws-sdk": "^2.1295.0",
    "aws-xray-sdk-core": "^3.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/aws-lambda": "^8.10.109",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "babel-jest": "^29.3.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --resolve-plugins-relative-to . --fix",
      "jest --colors --findRelatedTests --coverageThreshold '{}'"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
